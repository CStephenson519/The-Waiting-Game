<?xml version='1.0' encoding='utf-8'?>
<widget version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>The Waiting Game</name>
    <description>
        A mobile app used at restaurants
    </description>
    <author email="kruparelia8416@conestogac.on.ca" href="https://www.github.com/kruparelia">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="3.7.0" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
